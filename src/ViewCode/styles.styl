.view-code
	margin-bottom 30px
	line-height 22px
	font-size 14px

	pre
		code
			font-family inherit

		code
			display grid
			grid-template-columns minmax(70px, max-content) auto


.vc-line
	position relative

	&._number
		padding 0 20px
		color #A7ADBC
		user-select none

		&::before
			content ''
			position absolute
			top 0
			left 0

	&._minify_prev
		border-top 2px solid rgba(167,173,188, .6)

	&._minify_next
		border-bottom 2px solid rgba(167,173,188, .6)

	/* ADDED */
	&._added
		background rgba(32,212,98, .08)

		&._number::before
			bottom 0
			border-left 4px solid #205DD4

	/* REMOVED */
	&._removed
		&._number::before
			transform translateY(-50%)
			border-top 5px solid transparent
			border-left 10px solid #D42020
			border-bottom 5px solid transparent

	/* UPDATED */
	&._updated
		background rgba(32,93,212, .08)

		&._number::before
			bottom 0
			border-left 4px solid #205DD4
