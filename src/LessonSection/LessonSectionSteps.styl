@require "../Responsive"


.sb-lesson-steps
	display grid
	grid-template-columns 390px minmax(0, auto) // 37.8640776699% = 390px/1030px * 100
	column-gap 40px
	margin-top 80px
	width 100%

	+media(mobile tablet)
		grid-template-columns minmax(0, 1fr)


.tutorial-steps
	+media(desktop)
		margin-bottom 92vh


// STEP ITEM
.tutorial-steps__item
	line-height 22px
	font-size 14px

	& + .tutorial-steps__item
		margin-top 100px

	// step block
	.inner-block
		position relative
		padding 30px 20px 30px 28px
		border 1px solid #C8D1D7
		border-radius 16px
		overflow hidden
		cursor pointer

		&::before
			content ''
			position absolute
			left 0
			top 0
			bottom 0
			border-left 8px solid transparent
			transition border-color .2s ease-in

	&._active
		.inner-block
			&::before
				border-color #205DD4

	// step title
	.inner-title
		margin-bottom 20px
		line-height 28px
		font-weight 500
		font-size 18px

	.inner-description
		overflow-wrap break-word

	// step comment
	.inner-comment
		margin-top 20px