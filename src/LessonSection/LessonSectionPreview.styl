@require "../Responsive"


// STEPS PREVIEW CODE & IMAGE
// -----------------------------------------------
.tutorial-steps-preview
	grid-template-columns minmax(0, 1fr)
	background #F2F4F5
	border-radius 16px
	overflow auto

	+media(desktop)
		position -webkit-sticky
		position sticky
		top var(--steps-preview-padding-top)
		height calc(100vh - var(--steps-preview-padding-top) - var(--steps-preview-padding-bottom))

	&._small
		margin-top 40px
		margin-right calc(-1 * var(--layout-padding-x-mobile))
		line-height 20px
		font-size 12px
		border-radius 16px 0 0 16px


.tutorial-steps-preview__name
	margin 12px auto 28px 20px
	line-height 22px
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
	font-size 14px
	color #A7ADBC

	.preview_btn
		position absolute;
		right 16px
		cursor pointer
		font-weight 700
		line-height 24px
		color #205DD4

	.preview_btn::before
		content ""
		display inline-block
		position relative
		top 4px
		width 16px
		height 16px
		line-height 24px
		margin-right 10px

	.preview_btn.hide
		cursor default
		color #c8d1d7 !important

	.preview_btn.hide::before
		background: none !important

	.preview_btn.open::before
		background: url('data:image/svg+xml;base64,')

	.preview_btn.close::before
		background: url('data:image/svg+xml;base64,')


.tutorial-steps-preview__image
	margin 50px 0
	text-align center

	+media(mobile tablet)
		margin 50px auto 0

	img
		max-width 100%


.tutorial-steps-preview__video
	display flex

	video
		margin auto
