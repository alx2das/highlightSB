@require "../Style"


// STEPS PREVIEW CODE & IMAGE
// -----------------------------------------------
.tutorial-steps-asset
	grid-template-columns minmax(0, 1fr)
	background #F2F4F5
	border-radius 16px
	overflow auto

	+media(desktop)
		position -webkit-sticky
		position sticky
		top var(--steps-preview-padding-top)
		height calc(100vh - var(--steps-preview-padding-top) - var(--steps-preview-padding-bottom))

	&._small
		margin-top 40px
		margin-right calc(-1 * var(--layout-padding-x-mobile))
		line-height 20px
		font-size 12px
		border-radius 16px 0 0 16px


.tutorial-steps-asset__name
	display: grid;
	grid-template-columns: auto max-content;
	margin 12px 20px 28px
	line-height 22px
	overflow hidden
	text-overflow ellipsis
	white-space nowrap
	font-size 14px
	color #A7ADBC

	.preview_btn
		position absolute;
		right 16px
		cursor pointer
		font-weight 700
		line-height 24px
		color #205DD4

	.preview_btn::before
		content ""
		display inline-block
		position relative
		top 4px
		width 16px
		height 16px
		line-height 24px
		margin-right 10px

	.preview_btn.hide
		cursor default
		color #c8d1d7 !important

	.preview_btn.hide::before
		background: none !important

	.preview_btn.open::before
		background: url('data:image/svg+xml;base64,')

	.preview_btn.close::before
		background: url('data:image/svg+xml;base64,')


.tutorial-steps-asset__image
	margin 20px 0
	text-align center

	+media(mobile tablet)
		margin 20px auto 0

	img
		max-width 100%


.tutorial-steps-asset__video
	display flex

	video
		margin auto


.tutorial-steps-preview__button
	cursor pointer
	font-weight 700
	line-height 24px
	color #205DD4

	&:before
		content ""
		position: relative;
		display: inline-block;
		top: 4px;
		width 16px
		height 16px
		margin 0 10px

	&.open:before
		background: url('data:image/svg+xml;base64,')

	&.close:before
		background: url('data:image/svg+xml;base64,')

	&.hide
		cursor default
		color #c8d1d7 !important

		&:before
			display none

.tutorial-steps-preview__content
	position absolute
	z-index 9999
	top 35px
	right 15px
	visibility hidden
	max-height: 0;
	transition: max-height 0.3s ease-out;
	overflow: hidden;

	.preview__content-asset
		width 300px
		border-radius 20px
		margin 10px 5px 5px 5px
		border 3px solid #000000
		box-shadow 0 0 5px #000000
		overflow hidden

		.preview__content-asset__img
			display: inherit;
			width 100%

	&.show
		visibility visible
		max-height: 700px;

	&.responsive
		position relative
		top auto
		right auto

		.preview__content-asset
			margin 0 auto
